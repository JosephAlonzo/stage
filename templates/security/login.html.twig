{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container">
    <div class="row d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="col-6 col-md-3 justify-content-center login">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">{{'label.logout'|trans}}</a>
                    </div>
                {% endif %}

                <h1 class="h4 mb-3 font-weight-normal text-center">{{'login.label.title'|trans}}</h1>
                <div class=" text-center mt-2">
                    <label for="inputUsername">{{'login.label.username'|trans}}</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                </div>
                <div class=" text-center mt-2">
                    <label for="inputPassword">{{'login.label.password'|trans}}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class=" text-center mt-2">
                    <button class="btn btn-lg btn-primary mt-2" type="submit">
                        Connexion
                    </button>
                </div>

                <footer class="footer login">
                    <div class="d-flex justify-content-center">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright Â© 2021 <a href="https://advensys.fr/" target="_blank">ADVENSYS.</span>
                    </div>
                </footer>

            </form>
        </div>
    </div>
</div>
{% endblock %}
